{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Echoes Chat API",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/server",
      "env": {
        "DATABASE_URL": "postgres://postgres:postgres@localhost:5432/postgres?sslmode=disable&search_path=echoes_chat",
        "DB_HOST": "localhost",
        "DB_PORT": "5432",
        "DB_USER": "postgres",
        "DB_PASSWORD": "postgres",
        "DB_NAME": "postgres",
        "DB_SCHEMA": "echoes_chat",
        "DB_SSLMODE": "disable",
        "JWT_SECRET": "your-secret-key-change-this-in-production",
        "PORT": "8080",
        "ENV": "development"
      },
      "args": [],
      "showLog": true,
      "dlvFlags": [
        "--check-go-version=false",
        "--disable-aslr"
      ],
      "debugAdapter": "legacy",
      "apiVersion": 2
    }
   
  ]
}